# Helpers
alias df="df -h"                            # Disk free, in gigabytes, not bytes
alias server="python -m SimpleHTTPServer"
alias o="open"                        # Open folder in Finder

# Applications
alias st="open -a 'SublimeText2'"   # Open in SublimeText

# NPM
alias nig="npm i -g"
alias ni="npm i --save"
alias nid="npm i --save-dev"
alias nup="npm update"
alias nu="npm uninstall --save"
alias nud="npm uninstall --save-dev"

# Bower
alias bi="bower i --save"
alias bid="bower i --save-dev"
alias bup="bower update"
alias bu="bower uninstall --save"
