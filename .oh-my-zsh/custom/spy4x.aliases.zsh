# Helpers
alias df="df -h"                            # Disk free, in gigabytes, not bytes
alias server="python -m SimpleHTTPServer"
alias o="open"                        # Open folder in Finder

# Applications
alias st="open -a 'SublimeText2'"   # Open in SublimeText

# Yarn
alias ya="yarn add"  # install package to dependencies
alias yad="yarn add -D"  # install package to devDependencies
alias yag="yarn global add"  # install package globally
alias yu="yarn remove"